<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/app_icon"
            android:contentDescription="App Logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mot de passe oublié"
            android:textColor="@color/brand_blue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/login_card_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Step 1: Enter Email -->
                <LinearLayout
                    android:id="@+id/step1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrez votre adresse email pour recevoir un lien de réinitialisation."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_input_light"
                            android:hint="Entrez votre email"
                            android:textColorHint="@color/text_hint"
                            android:textColor="@color/text_primary"
                            android:inputType="textEmailAddress"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendCode"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Envoyer le lien"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_button_blue"
                        app:cornerRadius="16dp" />

                </LinearLayout>

                <!-- Step 2: Confirm Link Clicked -->
                <LinearLayout
                    android:id="@+id/step2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvEmailSent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Un lien a été envoyé à votre email"
                        android:textColor="@color/brand_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instructions:"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Ouvrez votre email\n2. Cliquez sur le lien 'Log In'\n3. Revenez ici et appuyez sur le bouton ci-dessous"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmClicked"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="J'ai cliqué sur le lien"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_button_blue"
                        app:cornerRadius="16dp" />

                    <!-- Resend Link -->
                    <TextView
                        android:id="@+id/btnResendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="Renvoyer le lien"
                        android:textColor="@color/brand_blue"
                        android:textStyle="bold"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Step 3: Enter New Password -->
                <LinearLayout
                    android:id="@+id/step3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Définissez votre nouveau mot de passe"
                        android:textColor="@color/brand_blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginBottom="24dp" />

                    <!-- New Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nouveau mot de passe"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_input_light"
                            android:hint="Entrez votre nouveau mot de passe"
                            android:textColorHint="@color/text_hint"
                            android:textColor="@color/text_primary"
                            android:inputType="textPassword"
                            android:paddingStart="16dp"
                            android:paddingEnd="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmer le mot de passe"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/text_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_input_light"
                            android:hint="Confirmez votre mot de passe"
                            android:textColorHint="@color/text_hint"
                            android:textColor="@color/text_primary"
                            android:inputType="textPassword"
                            android:paddingStart="16dp"
                            android:paddingEnd="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Reset Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Réinitialiser le mot de passe"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        android:background="@drawable/bg_button_blue"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back to Login -->
        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="← Retour à la connexion"
            android:textColor="@color/brand_blue"
            android:textStyle="bold"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/formCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
