<?xml version="1.0" encoding="utf-8"?>
<!-- Input Field Background with States
     - Default: Light gray fill with subtle border
     - Focused: White background with teal border
     - Error: White background with red border -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Error State -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_focused" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/input_stroke_error" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_focused" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/input_stroke_focused" />
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background_focused" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/input_stroke_focused" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/input_background" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/input_stroke" />
        </shape>
    </item>

</selector>