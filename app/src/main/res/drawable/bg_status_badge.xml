<?xml version="1.0" encoding="utf-8"?>
<!-- Status Badge Pill Background
     Pill shape with 20dp corners
     Background color should be set dynamically based on status -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Default pending status color, override with backgroundTint -->
    <solid android:color="@color/status_pending_background" />
    <corners android:radius="20dp" />
    <padding
        android:left="12dp"
        android:top="4dp"
        android:right="12dp"
        android:bottom="4dp" />

</shape>
